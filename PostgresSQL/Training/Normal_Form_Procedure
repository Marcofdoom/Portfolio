-- TRANSACTIONS TABLE
SELECT *
FROM TRANSACTIONS

-- ITEMS TABLE
SELECT *
FROM ITEMS
ORDER BY DESCRIPTION

-- CUSTOMERS TABLE
SELECT *
FROM CUSTOMERS

-- CALCUATE IF 1NF
SELECT COUNT(*)
FROM transactions
-- 3455

SELECT COUNT(*)
FROM(
	SELECT DISTINCT *
	FROM transactions
) AS ABC
-- 3455

-- CHECK IF 2NF
-- SEPERATE CUSTOMER-SPECIFIC COLUMNS INTO TEMPORARY TABLE
CREATE TABLE TMP AS
SELECT customerid,
		firstname,
		surname,
		shipping_state,
		loyalty_discount
FROM transactions

-- CREATE NEW TABLE CUSTOMERS AND REMOVE DUPLICATES
CREATE TABLE CUSTOMERS AS
SELECT DISTINCT*
FROM TMP

-- REMOVE CUSTOMER SPECIFIC COLUMNS
ALTER TABLE TRANSACTIONS
DROP COLUMN FIRSTNAME,
DROP COLUMN surname,
DROP COLUMN SHIPPING_STATE,
DROP COLUMN LOYALTY_DISCOUNT

-- DROP TEMPORARY TABLE
DROP TABLE TMP

-- CHECK 3NF
-- SEPERATE ITEM-SPECIFIC COLUMNS INTO TEMPORARY TABLE
CREATE TABLE TMP AS
SELECT ITEM,
		DESCRIPTION,
		RETAIL_PRICE
FROM TRANSACTIONS

-- CREATE NEW TABLE ITEMS AND REMOVE DUPLICATES
CREATE TABLE ITEMS AS
SELECT DISTINCT *
FROM TMP

-- REMOVE ITEM SPECIFIC COLUMNS
ALTER TABLE TRANSACTIONS
DROP COLUMN DESCRIPTION,
DROP COLUMN RETAIL_PRICE

-- DROP TEMPORARY TABLE
DROP TABLE TMP